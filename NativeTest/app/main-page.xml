<Page xmlns="http://www.nativescript.org/tns.xsd" loaded="pageLoaded" actionBarHidden="true">
  <StackLayout orientation="vertical">
    <TextField width="300px" text="{{txtKeyword}}" hint="search keyword" />

    <Button text="Search" height="50px" style="background-color:green;width:300px;border:none;font-size:20px;" tap="signin"/>
    <ListView items="{{ images }}" >
      <ListView.itemTemplate>
        <Image stretch="fill" height="200px" src="{{img}}" />
      </ListView.itemTemplate>
    </ListView>
  </StackLayout>
</Page>
